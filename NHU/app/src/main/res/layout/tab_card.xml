<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/tab_card"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/tabcard_eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAB CARD EVENT TITLE"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/word_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="date:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tabcard_eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tabcard_date"
                android:layout_marginTop="5dp"
                android:text="1000 Irving Ave, Syracuse, New York 13210"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tabcard_date"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="07/18/1996"
                android:textSize="15dp"
                android:layout_alignBaseline="@+id/word_date2"
                android:layout_alignBottom="@+id/word_date2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/word_cost2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/tabcard_cost"
                android:text="$"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tabcard_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:text="100.00"
                android:textSize="15dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    /</LinearLayout>