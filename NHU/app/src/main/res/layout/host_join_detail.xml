<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    tools:context="com.example.raych.nhu.Event_Info_frag">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40dp"
        android:layout_marginTop="23dp"
        android:id="@+id/host_join_name"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />


    <Button
        android:text="INVITE FRIENDS"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/contact_friends_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:layout_alignParentStart="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/host_join_name"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"
                android:id="@+id/host_join_cost"
                android:layout_marginTop="27dp"
                android:layout_alignParentEnd="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"
                android:id="@+id/host_join_time"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/host_join_date"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15dp"
                android:id="@+id/host_join_date"
                android:layout_alignBaseline="@+id/host_join_cost"
                android:layout_alignBottom="@+id/host_join_cost"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000 Irving Ave, Syracuse, New York 13210"
                android:id="@+id/host_join_location"
                android:textSize="15dp"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/host_join_time"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION:"
                android:id="@+id/word_description"
                android:textSize="15dp"
                android:layout_below="@+id/host_join_location"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/host_join_description"
                android:layout_below="@+id/word_description"
                android:textSize="15dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
