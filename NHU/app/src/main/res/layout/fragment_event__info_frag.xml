<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.raych.nhu.Event_Info_frag">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EVENT TITLE"
        android:textSize="40dp"
        android:textColor="@color/secondColor"
        android:layout_marginTop="20dp"
        android:id="@+id/detail_name2"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="25dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/detail_name2"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="480dp">

            <Button
                android:id="@+id/contact_friends_button2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="35dp"
                android:layout_marginEnd="25dp"
                android:text="INVITE FRIENDS"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/join_event_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:text="JOIN EVENT"
                android:textStyle="normal|bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/word_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TIME:"
                android:textSize="15dp"
                android:textStyle="normal|bold"
                android:layout_below="@+id/detail_date2"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/detail_cost2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100.00"
                android:textSize="20dp"
                android:layout_alignBaseline="@+id/word_cost"
                android:layout_alignBottom="@+id/word_cost"
                android:layout_alignStart="@+id/detail_date2" />

            <TextView
                android:id="@+id/word_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="DATE:"
                android:textSize="15dp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/word_cost"
                android:layout_height="wrap_content"
                android:layout_below="@+id/word_time"
                android:layout_marginTop="20dp"
                android:text="COST:"
                android:textSize="15dp"
                android:textStyle="normal|bold" />


            <TextView
                android:id="@+id/detail_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 PM"
                android:textSize="20dp"
                android:layout_alignBaseline="@+id/word_time"
                android:layout_alignBottom="@+id/word_time"
                android:layout_alignStart="@+id/detail_date2" />


            <TextView
                android:id="@+id/detail_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07/18/2017"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/word_location"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/word_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detail_cost2"
                android:layout_marginTop="20dp"
                android:text="LOCATION:"
                android:textSize="15dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/detail_location2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000 Irving Ave, Syracuse, New York 13210"
                android:textSize="20dp"
                android:layout_below="@+id/word_location"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/word_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detail_location2"
                android:layout_marginTop="20dp"
                android:text="DESCRIPTION:"
                android:textSize="15dp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/word_description2"
                android:layout_marginTop="15dp"
                android:text="DESCRIPTION DESCRIPTION DESCRIPTION DESCRIPTION DESCRIPTION DESCRIPTION"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/word_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch Our Video"
                android:textSize="15dp"
                android:textStyle="normal|bold"
                android:layout_alignBottom="@+id/youtube_button"
                android:layout_toEndOf="@+id/youtube_button"
                android:layout_marginBottom="11dp" />

            <ImageButton
                android:id="@+id/youtube_button"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/white"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/youtubeplay"
                android:layout_below="@+id/detail_description" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>

