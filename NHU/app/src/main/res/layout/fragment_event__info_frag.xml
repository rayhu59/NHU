<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@color/blue"
    tools:context="com.example.raych.nhu.Event_Info_frag">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EVENT TITLE"
        android:textSize="40dp"
        android:layout_marginTop="23dp"
        android:id="@+id/detail_name2"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />


    <Button
        android:text="INVITE FRIENDS"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/contact_friends_button2"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold" />


    <Button
        android:text="JOIN EVENT"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/join_event_button"
        android:layout_alignBaseline="@+id/contact_friends_button2"
        android:layout_alignBottom="@+id/contact_friends_button2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:textStyle="normal|bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/detail_name2"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100.00"
                android:textSize="15dp"
                android:id="@+id/detail_cost2"
                android:layout_marginTop="27dp"
                android:layout_alignParentEnd="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 PM"
                android:textSize="15dp"
                android:id="@+id/detail_time2"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/detail_date2"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07/18/2017"
                android:textSize="15dp"
                android:id="@+id/detail_date2"
                android:layout_alignBaseline="@+id/detail_cost2"
                android:layout_alignBottom="@+id/detail_cost2"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000 Irving Ave, Syracuse, New York 13210"
                android:id="@+id/detail_location2"
                android:textSize="15dp"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/detail_time2"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION:"
                android:id="@+id/word_description2"
                android:textSize="15dp"
                android:layout_below="@+id/detail_location2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION DESCRIPTION DESCRIPTION DESCRIPTION DESCRIPTION DESCRIPTION"
                android:id="@+id/detail_description"
                android:layout_below="@+id/word_description2"
                android:textSize="15dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>

