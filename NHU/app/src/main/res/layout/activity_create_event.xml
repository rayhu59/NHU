<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gold"
    tools:context="com.example.raych.nhu.CreateEvent">


    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Event Title"
        android:id="@+id/e_title"
        android:inputType="textEmailAddress"
        tools:layout_conversion_absoluteX="10dp"
        tools:layout_conversion_absoluteY="75dp"
        tools:layout_conversion_absoluteWidth="364dp"
        tools:layout_conversion_absoluteHeight="42dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="18dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Event Location"
        android:inputType="textEmailAddress"
        android:id="@+id/e_location"
        tools:layout_conversion_absoluteX="10dp"
        tools:layout_conversion_absoluteY="132dp"
        tools:layout_conversion_absoluteWidth="364dp"
        tools:layout_conversion_absoluteHeight="42dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/e_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:layout_constraintLeft_creator="1" />


    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Event Time"
        android:id="@+id/e_time"
        android:inputType="textEmailAddress"
        android:ems="10"
        tools:layout_conversion_absoluteX="10dp"
        tools:layout_conversion_absoluteY="190dp"
        tools:layout_conversion_absoluteWidth="150dp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/e_location"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Event Date"
        android:id="@+id/e_date"
        android:inputType="textEmailAddress"
        android:ems="10"
        tools:layout_conversion_absoluteX="224dp"
        tools:layout_conversion_absoluteY="190dp"
        tools:layout_conversion_absoluteWidth="150dp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/e_location" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Event Cost"
        android:inputType="number"
        android:id="@+id/e_cost"
        tools:layout_conversion_absoluteX="10dp"
        tools:layout_conversion_absoluteY="247dp"
        tools:layout_conversion_absoluteWidth="150dp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/e_time"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/e_time"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/e_time" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Youtube Link"
        android:id="@+id/youtube_link"
        tools:layout_conversion_absoluteX="10dp"
        tools:layout_conversion_absoluteY="305dp"
        tools:layout_conversion_absoluteWidth="150dp"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/e_cost"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/e_cost"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/e_cost" />

    <Button
        android:text="CREATE"
        android:textSize="15sp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/make_event_button"
        android:onClick="getNewEventInfo"
        android:background="@color/blue"
        tools:layout_conversion_absoluteX="92dp"
        tools:layout_conversion_absoluteY="489dp"
        tools:layout_conversion_absoluteWidth="200dp"
        tools:layout_conversion_absoluteHeight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/e_description" />


    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="47dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/e_description"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintLeft_toRightOf="@+id/youtube_link"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_date"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/mic"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_conversion_absoluteHeight="36dp"
        tools:layout_conversion_absoluteWidth="36dp"
        tools:layout_conversion_absoluteX="338dp"
        tools:layout_conversion_absoluteY="305dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:hint="Description..."
        android:ems="10"
        android:id="@+id/e_description"
        tools:layout_conversion_absoluteX="10dp"
        tools:layout_conversion_absoluteY="359dp"
        tools:layout_conversion_absoluteWidth="364dp"
        tools:layout_conversion_absoluteHeight="100dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="112dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/e_cost"
        android:textAlignment="textStart" />


</android.support.constraint.ConstraintLayout>
